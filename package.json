{
  "name": "vscode-kcide",
  "displayName": "KC IDE",
  "description": "Assembly IDE for KC85 computers",
  "version": "0.0.1",
  "publisher": "floooh",
  "repository": {
    "type": "git",
    "url": "https://github.com/floooh/vscode-kcide"
  },
  "license": "MIT",
  "bugs": "https://github.com/floooh/vscode-kcide/issues",
  "homepage": "https://github.com/floooh/vscode-kcide",
  "keywords": [ "retro-computing", "assembler", "kc85", "z80", "ide" ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [ "Debuggers", "Programming Languages" ],
  "activationEvents": [
    "workspaceContains:kcide.project.json"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "preview": true,
  "contributes": {
    "commands": [
      {
        "command": "floooh.kcide.build",
        "category": "KCIDE",
        "title": "Build"
      },
      {
        "command": "floooh.kcide.check",
        "category": "KCIDE",
        "title": "Check"
      },
      {
        "command": "floooh.kcide.run",
        "category": "KCIDE",
        "title": "Run"
      },
      {
        "command": "floooh.kcide.openEmulator",
        "category": "KCIDE",
        "title": "Open Emulator"
      },
      {
        "command": "floooh.kcide.bootEmulator",
        "category": "KCIDE",
        "title": "Reboot Emulator"
      },
      {
        "command": "floooh.kcide.resetEmulator",
        "category": "KCIDE",
        "title": "Reset Emulator"
      }
    ],
    "jsonValidation": [
      {
        "url": "./media/kcide.project.schema.json",
        "fileMatch": [ "kcide.project.json" ]
      }
    ],
    "languages": [
      {
        "id": "asm",
        "aliases": [ "assembly", "z80", "6502", "asm" ],
        "extensions": [ "asm" ],
        "configuration": "./media/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.asm",
        "path": "./media/asm.tmGrammar.json"
      }
    ],
    "keybindings": [
      {
        "command": "floooh.kcide.build",
        "key": "f7",
        "when": "editorTextFocus"
      },
      {
        "command": "floooh.kcide.run",
        "key": "f5",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts && tsc --noEmit",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@vscode/wasm-wasi": "0.13.0-pre.1"
  },
  "extensionDependencies": [
    "ms-vscode.wasm-wasi-core"
  ]
}
