{
  "name": "vscode-kcide",
  "displayName": "KC IDE",
  "description": "Assembly IDE for KC85 computers",
  "version": "0.13.3",
  "publisher": "floooh",
  "repository": {
    "type": "git",
    "url": "https://github.com/floooh/vscode-kcide"
  },
  "license": "MIT",
  "bugs": "https://github.com/floooh/vscode-kcide/issues",
  "homepage": "https://github.com/floooh/vscode-kcide",
  "keywords": [
    "retro-computing",
    "assembler",
    "kc85",
    "z80",
    "ide"
  ],
  "icon": "media/logo.png",
  "galleryBanner": {
    "color": "#111111",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:kcide.project.json"
  ],
  "main": "./dist/web/extension.js",
  "browser": "./dist/web/extension.js",
  "preview": true,
  "contributes": {
    "commands": [
      {
        "command": "floooh.kcide.build",
        "category": "KCIDE",
        "title": "Build"
      },
      {
        "command": "floooh.kcide.check",
        "category": "KCIDE",
        "title": "Check"
      },
      {
        "command": "floooh.kcide.run",
        "category": "KCIDE",
        "title": "Run"
      },
      {
        "command": "floooh.kcide.debug",
        "category": "KCIDE",
        "title": "Debug"
      },
      {
        "command": "floooh.kcide.openEmulator",
        "category": "KCIDE",
        "title": "Open Emulator"
      },
      {
        "command": "floooh.kcide.bootEmulator",
        "category": "KCIDE",
        "title": "Reboot Emulator"
      },
      {
        "command": "floooh.kcide.resetEmulator",
        "category": "KCIDE",
        "title": "Reset Emulator"
      }
    ],
    "keybindings": [
      {
        "command": "",
        "key": "f1",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f2",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f3",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f4",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f5",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f6",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f7",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f8",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f9",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f10",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f11",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      },
      {
        "command": "",
        "key": "f12",
        "when": "activeWebviewPanelId === 'kcide_emu'"
      }
    ],
    "jsonValidation": [
      {
        "url": "./media/kcide.project.schema.json",
        "fileMatch": [
          "kcide.project.json"
        ]
      }
    ],
    "languages": [
      {
        "id": "asm",
        "aliases": [
          "assembly",
          "z80",
          "6502",
          "asm"
        ],
        "extensions": [
          "asm"
        ],
        "configuration": "./media/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "asm",
        "scopeName": "source.asm",
        "path": "./media/asm.tmGrammar.json"
      }
    ],
    "breakpoints": [
      {
        "language": "asm"
      }
    ],
    "debuggers": [
      {
        "type": "kcide",
        "languages": [
          "asm"
        ],
        "label": "KC IDE Debugger",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "kcide",
            "request": "launch",
            "name": "Debug",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "KC IDE: Launch",
            "description": "A new configuration for debugging a KC IDE project.",
            "body": {
              "type": "kcide",
              "request": "launch",
              "name": "Debug",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run compile",
    "clean": "rimraf out dist",
    "compile": "webpack --mode production",
    "compile-dev": "webpack --mode development",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.64.0",
    "@vscode/wasm-wasi": "0.13.0-pre.1",
    "await-notify": "^1.0.1",
    "process": "^0.11.10",
    "url": "^0.11.3"
  }
}
